# Template de base .env pour projets Django Tristan
# Paramètres Django
DEBUG=False
DJANGO_SECRET_KEY=cle-secrete
ALLOWED_HOSTS=localhost,127.0.0.1,domaine.com
DJANGO_SETTINGS_MODULE=projet.settings

# Base de données (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=django_db
DB_USER=user
DB_PASSWORD=password
DB_HOST=postgresql
DB_PORT=5432

# REDIS (cache & celery)
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# Mails et notifications (optionnels)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=mail@gmail.com
EMAIL_HOST_PASSWORD=password
DEFAULT_FROM_EMAIL=noreply@domaine.com

# Monitoring
MONITORING_ENABLED=True
ALERT_EMAIL=admin@domaine.com
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# SSL/Certbot
CERTBOT_EMAIL=admin@domaine.com
DOMAIN_NAME=domaine.com
LETSENCRYPT_ENV=production

# Gunicorn
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_TIMEOUT=120

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=02:00

# Sécurité
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
HSTS_SECONDS=31536000